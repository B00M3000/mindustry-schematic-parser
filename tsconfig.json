{
  "compilerOptions": {
    "alwaysStrict": true,
    "lib": ["ES2020", "DOM"],
    "target": "ES2020",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "outDir": "build",
    "isolatedModules": true,
    "importHelpers": true,
    "strict": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "declaration": true
  },
  "include": ["src/*"]
}
